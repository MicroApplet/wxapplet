.container {
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f7f7f7;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin: 40rpx 0;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.intro-section {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  text-align: center;
}

.intro-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}