/* clinc.wxss - 重新设计的处方提醒页面样式 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
  position: relative;
}

/* 顶部导航样式 */
.header {
  background-color: #fff;
  padding: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
  text-align: center;
  display: block;
}

/* 主要内容区域 */
.main-content {
  padding: 16px;
}

/* 处方列表样式 */
.prescription-list {
  background-color: #fff;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
  position: relative;
}

/* 列表头部 */
.list-header {
  display: flex;
  background-color: #f8f9fa;
  border-bottom: 1px solid #e9ecef;
  padding: 12px 8px;
}

.header-item {
  flex: 1;
  text-align: center;
  font-size: 14px;
  font-weight: 600;
  color: #666;
}

/* 列表内容 */
.list-content {
  background-color: #fff;
}

/* 处方项 */
.prescription-item {
  display: flex;
  padding: 16px 8px;
  border-bottom: 1px solid #f0f0f0;
  transition: background-color 0.2s;
  background-color: #fff;
}

.prescription-item:active {
  background-color: #f8f9fa;
}

.prescription-item:last-child {
  border-bottom: none;
}

/* 处方单元格 */
.prescription-cell {
  flex: 1;
  text-align: center;
  font-size: 14px;
  color: #333;
}

/* 警告文字 */
.warning-text {
  color: #e64340;
  font-weight: 600;
}

/* 加载状态 */
.loading-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40px 0;
}

.loading-spinner {
  width: 30px;
  height: 30px;
  border: 3px solid #f3f3f3;
  border-top: 3px solid #3498db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 10px;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 14px;
  color: #666;
}

/* 无权限提示 - 全屏覆盖 */
.permission-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.95);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 200;
}

.permission-content {
  text-align: center;
  padding: 20px;
}

.permission-icon {
  font-size: 64px;
  margin-bottom: 20px;
  display: block;
}

.permission-text {
  font-size: 16px;
  color: #666;
  line-height: 1.5;
}

/* 空状态样式 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60px 20px;
}

.empty-icon {
  font-size: 48px;
  margin-bottom: 16px;
  display: block;
}

.empty-text {
  font-size: 14px;
  color: #999;
  text-align: center;
}

/* 加载更多样式 */
.loading-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20px;
  font-size: 13px;
  color: #999;
}

/* 无更多数据样式 */
.no-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20px;
  font-size: 12px;
  color: #ccc;
}

/* 为小屏幕设备优化 */
@media (max-width: 375px) {
  .table-cell {
    padding: 10px 4px;
    font-size: 12px;
  }
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-label {
  font-size: 14px;
  color: #666;
}

.detail-value {
  font-size: 14px;
  color: #333;
  font-weight: 500;
}

.warning-text {
  color: #e64340;
  font-weight: 600;
}

/* 加载更多样式 */
.loading-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20px 0;
  font-size: 14px;
  color: #999;
}

.no-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 15px 0;
  font-size: 12px;
  color: #999;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .container {
    padding: 15px;
  }
  
  .form-label {
    width: 70px;
    font-size: 13px;
  }
  
  .detail-item {
    flex-direction: column;
    align-items: flex-start;
    margin-bottom: 8px;
  }
  
  .detail-value {
    margin-top: 4px;
  }
}