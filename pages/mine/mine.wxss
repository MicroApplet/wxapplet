/* mine.wxss */
.container {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 实名认证相关样式 */
.verified {
  color: #1aad19;
  font-weight: bold;
}

.verify-btn {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
}

.user-info-container {
  width: 100%;
  padding: 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: 1px solid #eee;
  margin-bottom: 30rpx;
}

.avatar-section {
  margin-bottom: 20rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
}

.info-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nickname-container {
  margin-bottom: 20rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.no-nickname {
  font-size: 32rpx;
  color: #999;
}

.loading {
  font-size: 32rpx;
  color: #999;
}

.authorize-btn {
  background-color: #1aad19;
  color: white;
  font-size: 28rpx;
  padding: 10rpx 40rpx;
  border-radius: 40rpx;
}

.user-details {
  width: 100%;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1px solid #eee;
}

.label {
  font-size: 32rpx;
  color: #666;
}

.value {
  font-size: 32rpx;
  color: #333;
}

.empty-state {
  margin-top: 60rpx;
  padding: 40rpx;
  text-align: center;
  background-color: #f9f9f9;
  border-radius: 10rpx;
}

.empty-text {
    font-size: 28rpx;
    color: #999;
  }

/* 实名认证弹窗样式 */
.form-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-backdrop {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: relative;
  width: 80%;
  max-width: 500rpx;
  background-color: white;
  border-radius: 20rpx;
  overflow: hidden;
  z-index: 1000;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1px solid #eee;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 48rpx;
  color: #999;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.form-container {
  padding: 30rpx;
}

.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.form-label {
  width: 160rpx;
  font-size: 32rpx;
  color: #666;
}

.form-value {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.form-input {
  flex: 1;
  font-size: 32rpx;
  padding: 20rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  color: #333;
}

.btn-container {
  padding: 30rpx;
}

.face-btn {
  width: 100%;
  font-size: 32rpx;
  padding: 20rpx 0;
}

.form-tip {
  padding: 20rpx 0;
  text-align: center;
}

.form-tip text {
  font-size: 26rpx;
  color: #999;
}

.feature-status-tip {
  display: block;
  margin-top: 20rpx;
  padding: 0 30rpx;
  font-size: 24rpx;
  color: #ff6700;
  text-align: center;
  line-height: 1.5;
}