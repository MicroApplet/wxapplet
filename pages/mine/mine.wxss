/* mine.wxss */
.container {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 实名认证相关样式 */
.verified {
  color: #1aad19;
  font-weight: bold;
}

.verify-btn {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
}

.user-info-container {
  width: 100%;
  padding: 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: 1px solid #eee;
  margin-bottom: 30rpx;
}

.avatar-section {
  margin-bottom: 20rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
}

.info-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nickname-container {
  margin-bottom: 20rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.no-nickname {
  font-size: 32rpx;
  color: #999;
}

.loading {
  font-size: 32rpx;
  color: #999;
}

.authorize-btn {
  background-color: #1aad19;
  color: white;
  font-size: 28rpx;
  padding: 10rpx 40rpx;
  border-radius: 40rpx;
}

.user-details {
  width: 100%;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1px solid #eee;
}

.label {
  font-size: 32rpx;
  color: #666;
}

.value {
  font-size: 32rpx;
  color: #333;
}

.empty-state {
  margin-top: 60rpx;
  padding: 40rpx;
  text-align: center;
  background-color: #f9f9f9;
  border-radius: 10rpx;
}

.empty-text {
    font-size: 28rpx;
    color: #999;
  }

/* 手机号授权样式 */
.phone-auth-status {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 15rpx;
  font-size: 24rpx;
  color: #666;
}

.phone-auth-btn {
  font-size: 24rpx;
  padding: 0 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 30rpx;
}

/* 错误信息样式 */
.error-message {
  padding: 20rpx;
  margin: 20rpx;
  background-color: #fff2f0;
  color: #f5222d;
  font-size: 26rpx;
  border-radius: 10rpx;
  text-align: center;
}

/* 实名认证弹窗样式 */
.form-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-backdrop {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.modal-content {
  position: relative;
  width: 90%;
  max-width: 700rpx;
  min-height: 700rpx;
  background-color: white;
  border-radius: 24rpx;
  overflow: hidden;
  z-index: 1000;
  animation: slideIn 0.3s ease;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.15);
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
}

@keyframes slideIn {
  from {
    transform: translateY(-20rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 36rpx;
  background: linear-gradient(135deg, #07c160 0%, #00a854 100%);
  border-bottom: 1px solid #eee;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

.close-btn {
  font-size: 48rpx;
  color: white;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  transition: all 0.2s;
  background-color: rgba(255, 255, 255, 0.2);
}

.close-btn:active {
  background-color: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

.form-container {
  padding: 40rpx;
  padding-bottom: 60rpx;
}

.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 36rpx;
}

/* 上下排列的表单项样式 */
.form-group {
  margin-bottom: 48rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 32rpx;
  color: #444;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-value {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.form-input {
  width: 100%;
  font-size: 32rpx;
  padding: 32rpx 26rpx;
  border: 1px solid #ddd;
  border-radius: 12rpx;
  color: #333;
  transition: all 0.3s;
  background-color: white;
  box-sizing: border-box;
  min-height: 96rpx;
  display: flex;
  align-items: center;
}

.form-input:focus {
  border-color: #07c160;
  outline: none;
  box-shadow: 0 0 0 2rpx rgba(7, 193, 96, 0.2);
}

/* 微信小程序picker组件样式 */
.id-type-picker {
  margin-top: 16rpx;
  width: 100%;
  padding: 20rpx 26rpx;
  border: 1px solid #ddd;
  border-radius: 12rpx;
  background-color: white;
  transition: all 0.3s;
  box-sizing: border-box;
}

.id-type-picker:active {
  border-color: #07c160;
  box-shadow: 0 0 0 2rpx rgba(7, 193, 96, 0.2);
}

.picker-hint {
  font-size: 28rpx;
  color: #07c160;
  text-align: center;
}

/* 下拉选择框样式 */
.select-container {
  width: 100%;
  position: relative;
}

/* 可用选项样式 - 字体加粗加黑 */
.available-option {
  font-weight: bold;
  color: #000000;
}

/* 禁用选项样式 - 置灰 */
.disabled-option {
  color: #999999;
}

.select-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 26rpx;
  border: 1px solid #ddd;
  border-radius: 12rpx;
  background-color: white;
  transition: all 0.3s;
}

.select-box:active {
  border-color: #07c160;
  box-shadow: 0 0 0 2rpx rgba(7, 193, 96, 0.2);
}

.select-box:active {
  border-color: #07c160;
}

.select-text {
  font-size: 32rpx;
  color: #333;
}

.select-arrow {
  font-size: 24rpx;
  color: #999;
  transition: transform 0.2s;
}

/* 下拉选项列表样式 */
.select-options {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  max-height: 400rpx;
  margin-top: 8rpx;
  background-color: white;
  border: 1px solid #eee;
  border-radius: 10rpx;
  overflow-y: auto;
  z-index: 1001;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  animation: expandDown 0.2s ease;
}

@keyframes expandDown {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.option-item {
  padding: 28rpx 30rpx;
  font-size: 30rpx;
  color: #333;
  border-bottom: 1px solid #f5f5f5;
  transition: background-color 0.2s;
}

.option-item:last-child {
  border-bottom: none;
}

.option-item:active {
  background-color: #f8f8f8;
}

.option-item.selected {
  background-color: #f0f9f4;
  color: #07c160;
}

.option-item.disabled {
  color: #999;
  background-color: #f5f5f5;
}

.option-item.disabled:active {
  background-color: #f5f5f5;
}

.btn-container {
  padding: 30rpx;
}

.face-btn {
  width: 100%;
  font-size: 32rpx;
  padding: 20rpx 0;
}

.form-tip {
  padding: 20rpx 0;
  text-align: center;
}

.form-tip text {
  font-size: 26rpx;
  color: #999;
}

.feature-status-tip {
  display: block;
  margin-top: 20rpx;
  padding: 0 30rpx;
  font-size: 24rpx;
  color: #ff6700;
  text-align: center;
  line-height: 1.5;
}