.container {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-info-container {
  width: 100%;
  padding: 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: 1px solid #eee;
  margin-bottom: 30rpx;
}

.avatar-section {
  margin-bottom: 20rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
}

.info-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nickname-container {
  margin-bottom: 20rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.no-nickname {
  font-size: 32rpx;
  color: #999;
}

.loading {
  font-size: 32rpx;
  color: #999;
}

.authorize-btn {
  background-color: #1aad19;
  color: white;
  font-size: 28rpx;
  padding: 10rpx 40rpx;
  border-radius: 40rpx;
}

.user-details {
  width: 100%;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1px solid #eee;
}

.label {
  font-size: 32rpx;
  color: #666;
}

.value {
  font-size: 32rpx;
  color: #333;
}

.empty-state {
  margin-top: 60rpx;
  padding: 40rpx;
  text-align: center;
  background-color: #f9f9f9;
  border-radius: 10rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}