<!-- pages/login/login.wxml -->
<view class="container">
  <!-- 登录表单容器 -->
  <view class="login-form">
    <!-- 页面标题 -->
    <view class="form-title">
      <text>微信授权登录</text>
    </view>
    
    <!-- 错误提示 -->
    <view wx:if="{{errorMsg}}" class="error-tip">
      {{errorMsg}}
    </view>
    
    <!-- 登录按钮 -->
    <button 
      class="login-btn"
      bindtap="doWechatLogin"
      loading="{{loading}}"
      disabled="{{loading}}"
      type="primary"
    >
      微信一键登录
    </button>
    
    <!-- 授权手机号按钮 -->
    <button 
      class="phone-auth-btn"
      open-type="getPhoneNumber"
      bindgetphonenumber="onGetPhoneNumber"
      loading="{{loading}}"
      disabled="{{loading}}"
    >
      授权手机号
    </button>
  </view>
</view>