/* pages/login/login.wxss */

/* 页面容器 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 0 30rpx;
}

/* 登录表单容器 */
.login-form {
  width: 100%;
  max-width: 500rpx;
  padding: 80rpx 60rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

/* 表单标题 */
.form-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 60rpx;
}

/* 错误提示 */
.error-tip {
  padding: 20rpx;
  background-color: #fff2f0;
  color: #ff4d4f;
  font-size: 24rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  text-align: center;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 50rpx;
  margin-top: 20rpx;
}

.login-btn:active {
  opacity: 0.8;
}

/* 微信登录 */
.wechat-login {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
  color: #07c160;
  font-size: 28rpx;
}

.wechat-login image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

/* 辅助链接 */
.helper-links {
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
  font-size: 26rpx;
}

.helper-links text {
  color: #666666;
}

.helper-links text:active {
  color: #07c160;
}

.separator {
  margin: 0 20rpx;
  color: #cccccc;
}

/* 用户信息区域 */
.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40rpx;
}

.user-info image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.user-info text {
  font-size: 28rpx;
  color: #333333;
}